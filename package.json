{
  "name": "nodejs-ts-playground",
  "private": true,
  "workspaces": [
    "apps/gateway",
    "apps/user",
    "apps/product",
    "libs/db",
    "libs/error",
    "libs/log",
    "libs/metrics",
    "libs/middlewares",
    "libs/types",
    "libs/utils"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "build:prepare": "rm -rf dist && npm run build:libs",
    "build": "npm run build:prepare && tsc --build",
    "build:libs": "tsc --build libs/db && tsc --build libs/error && tsc --build libs/log && tsc --build libs/metrics && tsc --build libs/middlewares && tsc --build libs/types && tsc --build libs/utils",
    "build:all": "npm run build --workspaces",
    "build:gateway": "npm run build:libs && npm --workspace apps/gateway run build",
    "build:user": "npm run build:libs && npm --workspace apps/user run build",
    "build:product": "npm run build:libs && npm --workspace apps/product run build",
    "start:gateway": "npm --workspace apps/gateway run start",
    "start:user": "npm --workspace apps/user run start",
    "start:product": "npm --workspace apps/product run start",
    "dev:gateway": "npm --workspace apps/gateway run dev",
    "dev:user": "npm --workspace apps/user run dev",
    "dev:product": "npm --workspace apps/product run dev"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-jaeger": "^2.2.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/instrumentation": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-http-proxy": "^2.1.2",
    "express-prom-bundle": "^8.0.0",
    "mysql2": "^3.15.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.27",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2"
  }
}
